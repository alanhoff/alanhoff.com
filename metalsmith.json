{
  "source": "content",
  "destination": "build",
  "metadata": {
    "site": {
      "title": "Alan Hoffmeister",
      "author": "Alan Hoffmeister",
      "url": "https://alanhoff.com"
    }
  },
  "plugins": {
    "metalsmith-collections": {
      "posts": {
        "sortBy": "date",
        "reverse": true
      }
    },
    "metalsmith-slug": {
      "renameFiles": true,
      "patterns": ["posts/*.md"]
    },
    "metalsmith-metallic": true,
    "metalsmith-markdown": {
      "smartypants": true,
      "gfm": true,
      "tables": true
    },
    "metalsmith-path": true,
    "metalsmith-more": true,
    "metalsmith-feed": {
      "collection": "posts"
    },
    "metalsmith-paginate": {
      "perPage": 5,
      "path": "posts"
    },
    "metalsmith-templates": {
      "engine": "swig",
      "directory": "templates"
    }
  }
}
